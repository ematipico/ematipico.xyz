---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import { Picture } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.filter(p => !p.data.draft).map((post) => ({
    params: { slug: post.data.slug },
    props: post,
  }));
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await render(post);
---

<Layout title={post.data.title} description={post.data.description} ogImage={`/og/blog/${post.data.slug}.png`}>
  <article class="max-w-3xl mx-auto">

    <!-- Header -->
    <header class="mb-8 space-y-4">
      <div class="text-center space-y-2">
        <time class="text-sm text-gray-500 dark:text-gray-400" datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </time>
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-gray-100 leading-tight">
          {post.data.title}
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          {post.data.description}
        </p>
      </div>

      {post.data.heroImage && (
        <div class="mt-8">
          <Picture
            src={post.data.heroImage}
            alt={post.data.heroAltImage || post.data.title}
            width={768}
            height={320}
            class="w-full h-64 sm:h-80 object-cover rounded-lg shadow-lg"
            formats={['avif', 'webp']}
            layout="constrained"
          />
        </div>
      )}
    </header>

    <!-- Content -->
    <div class="prose max-w-none">
      <Content />
    </div>

    <!-- Navigation -->
    <nav class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
      <a
        href="/blog"
        class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 transition-colors"
      >
        ‚Üê Back to blog
      </a>
    </nav>
  </article>
</Layout>


